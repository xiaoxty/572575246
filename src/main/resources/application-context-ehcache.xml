<?xml version="1.0" encoding="UTF-8"?>
<beans
	default-destroy-method="destroy"
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- 缓存管理
	<bean id="cacheManager"
		class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
		<property name="configLocation">
			<value>/WEB-INF/ehcache.xml</value>
		</property>
	</bean>
	 -->
	<!-- 方法的缓存 -->
	<bean id="methodCache"
		class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<!--
		<property name="cacheManager">
			<ref local="cacheManager" />
		</property>
		  -->
		<property name="cacheName">
			<value>cn.ffcs.raptornuke.demo.plugins.cache.METHOD_CACHE</value>
		</property>
	</bean>
	<bean id="methodCacheInterceptor"
		class="cn.ffcs.raptornuke.plugin.common.cache.MethodCacheInterceptor">
		<property name="cache">
			<ref local="methodCache" />
		</property>
	</bean>
	<bean id="methodCacheBeforeAdvice"
		class="cn.ffcs.raptornuke.plugin.common.cache.MethodCacheBeforeAdvice">
		<property name="cache">
			<ref local="methodCache" />
		</property>
	</bean>
	<bean id="methodCachePointCut"
		class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<property name="advice">
			<ref local="methodCacheInterceptor" />
		</property>
		<property name="patterns">
			<list>
				<value>.*getCache.*</value>
			</list>
		</property>
	</bean>
	
	<bean id="methodCachePointCutAdvice"
		class="org.springframework.aop.support.RegexpMethodPointcutAdvisor">
		<property name="advice">
			<ref local="methodCacheBeforeAdvice" />
		</property>
		<property name="patterns">
			<list>
				<value>.*getRefresh.*</value>
			</list>
		</property>
	</bean>
</beans>
